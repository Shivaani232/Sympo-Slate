	<script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
	<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
	<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
</head>
<body style="background-color: #ECECEC;">
    <nav class="navbar navbar-inverse mainnav">
        <div class="container-fluid">
          <div class="navbar-header">
            <img src="/Public/Images/Logo.png" alt="" width="375px" height="65px" style="padding-left: 60px;">
          </div>
          <ul class="nav navbar-nav navbar-right nav-text">
            <li><a href="/login" style="text-decoration: none; color: white;">Hi Shivaani | Logout</a></li>
          </ul>
        </div>
      </nav>
    <br>
    <div class="mainbox">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-6">
                <br>
                <div style="margin-left: 50px;"><a href="/all_events"><img src="/Public/Images/arrow.png" width="35px" height="40px"></a><span class="addEventText" style="padding-left: 30px;">Add Event</span></div>
                <br>
                <a onclick="addText()"><img src="/Public/Images/event.png" width="620px" height="615px"></a>
                </div>

                <div class="col-md-6">
                    <br><br>
                    <form style="background-color: #ECECEC;padding:50px;" action="add_event" method="POST">
                        <p class="addEventText" style=" width: 526px;height: 33px;padding-left: 140px;">Event Information</p>
                        <label for="name" class="addEventText" style="font-size: 18px;">Event Name</label><br>
                        <input type="text" id="name" name="name" style="width: 460px; height: 33px;"><br>
                        <label for="description" class="addEventText" style="font-size: 18px;">Event Description</label><br>
                        <input type="text" id="description" name="description" style="width: 460px; height: 66px;"><br>
                        <label for="url" class="addEventText" style="font-size: 18px;">Event URL</label><br>
                        <input type="text" id="url" name="url" style="width: 460px; height: 33px;"><br>
                        <label for="eventdate" class="addEventText" style="font-size: 18px;">Event Date</label><br>
                        <input type="date" id="eventdate" name="eventdate" style="width: 460px; height: 33px;"><br><br>
                    <div class="container">
                      <div class="row">
                        <div class="col-6">
                        <label for="starttime" class="addEventText" style="font-size: 18px;">Start Time</label><br>
                        <input type="time" id="starttime" name="starttime" style="width: 210px; height: 33px;">
                        </div>
                        <div class="col-6">
                        <label for="endtime" class="addEventText" style="font-size: 18px;">End Time</label><br>
                        <input type="time" id="endtime" name="endtime" style="width: 210px; height: 33px;">
                        </div>
                      </div>
                    </div><br>

                    <p id="extra-text-1" style="font-size: 15px;"></p>
                    
                    <div class="container">
                      <div class="row">
                        <div class="col-6">
                        <a href="/admin_home" style="color: black;float: right;text-decoration: none;font-size: 21px;" class="addEventText">Cancel</a>
                        </div>
                        <div class="col-6">
                        <button class="addEvent addEventText" style="color: white; font-size: 16px; text-align: center;">ADD EVENT</button>
                        </div>
                      </div>
                    </div>
                    </form>
                </div>
            </div>
            </div>
            <br><br>
        </div>
    </div>
</body>
<script>
  function addText() {
		var x = document.getElementById("extra-text-1");
		if (x.innerHTML === "") {
			x.innerHTML = "All fields are required";
		} else {
			x.innerHTML = "";
		}
	}
</script>
</html>