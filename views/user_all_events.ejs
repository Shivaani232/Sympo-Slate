<!DOCTYPE html>
<html>
<head>
	<title>Sympo Slate</title>
	<link rel="stylesheet" href="/Public/Css/style.css">
	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
	<script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
	<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
	<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
</head>
<body style="background-color: white;">
    <nav class="navbar navbar-inverse mainnav">
        <div class="container-fluid">
          <div class="navbar-header">
            <img src="/Public/Images/Logo.png" alt="" width="375px" height="65px" style="padding-left: 60px;">
          </div>
          <ul class="nav navbar-nav navbar-right nav-text">
            <li><a href="/login" style="text-decoration: none; color: white;">Hi <%=  username%> | Logout</a></li>
          </ul>
        </div>
      </nav>
    <div style="background-color: #ECECEC;">
        <ul style="padding:10px;">
            <li style="display: inline;" class="events-text"><a href="/user_home" style="text-decoration: none;color: #461143;">All Events</a></li>
            <li style="display: inline;" class="events-text-2"><a href="/user_calendar" style="text-decoration: none;color: black;">My Calendar</a></li>
        </ul>
        <div style="text-align: center ;float: right;margin-right: 50px; width:400px;height: 80px;" id="alert-text" class="">
        </div>
    </div>
    <a href=# onclick=closeAlert() style="text-decoration: none;color: black; position: relative;top:0px;left: 1500px;">&times;</a>
    <br>
    <div class="mainbox" style="background-color: #ECECEC;">
        <br>
        <div class="events-text" style="text-decoration: none;">All Events</div>
        <br><br>
        <div>
              <% for(var i=0; i<events.length; i++) {%>
                <div style="background-color: white; margin: 15px;" class="event_details">
                  <br>
                  <div>
                  <img src="/Public/Images/events.jpeg" width="255px" height="150px" style="float: left; margin-left: 10px;padding-right: 10px;">
                  <div class="events-text" style="text-decoration: none;"><%= events[i].name %></div>
                  <div  class="user-text"  style=" padding-left: 70px;"><%= events[i].description %></div>
                  <br>
                  </div>
                  <div style="float: right;margin-right: 10px;margin-top: -80px;" class="user-text"> 
                  <div style="text-align: center; margin-right: 50px;"><%= events[i].eventdate %> </div>                 
                  <div style="text-align: center; margin-right: 50px;"><%= events[i].starttime %> - <%= events[i].endtime %></div>
                  <div style="text-align: center ;float: right;margin-right: 30px;width:260px"class="add" id="Add_butt"><a href=# onclick=checkEvent() style="text-decoration: none;color: white;padding-top: 2px;">ADD TO MY CALENDAR</a></div>   
                  </div>
                  <br><br><br>
                </div><br>
              <% } %>
        </div>
        <br><br>
    </div>
</body>
<script>
  var myBool=1;
  var x=document.getElementById('alert-text');
  var y=document.getElementById('Add_butt');
  function checkEvent(){
    if(myBool>1){
      x.innerHTML="Sorry, You cannot add this event. You have another event scheduled on this time.";
      x.classList.add('add');
    }
    else{
      myBool+=1;
      y.innerHTML="SCHEDULED";
      y.style.backgroundColor="grey";
    }
  }
  function closeAlert(){
    var x=document.getElementById('alert-text');
    x.style.visibility="hidden";
  }
</script>
</html>